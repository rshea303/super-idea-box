<div class="idea">
  <%= idea.title %> : <br>
  <%= idea.description %> <br>
  <%= idea.id %> <br>
  <%= link_to edit_idea_path(idea), remote: true do %>
    <button type="button" class="update-button">Update Idea</button>
  <% end %>
  <br>
  <%= link_to idea, remote: true, method: :delete, data: { confirm: "Are you sure?" } do %>
    <button type="button" class="delete-button">Delete</button>
  <% end %>
</div>
