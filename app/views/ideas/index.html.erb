<div class="container">

  <div class="twelve columns">

    <div class="head-banner">
      <h2 style="align: center">Super IdeaBox</h2>

      <button type="button" class="new-idea-button">Create New Idea</button>
    </div>

    <div class="row">
      <div class="five column new-idea-form hidden">
            <%= form_for @idea, remote: true do |f| %>
              <%= f.label :title %>
              <%= f.text_field :title %>
              <%= f.label :description %>
              <%= f.text_field :description %><br>
              <%= f.submit "Submit New Idea" %>
            <% end %>
      </div>

      <div class="five column update-form hidden">
            <%= form_for @idea, method: :update, remote: true do |f| %>
              <%= f.label :title %>
              <%= f.text_field :title %>
              <%= f.label :description %>
              <%= f.text_field :description %><br>
              <%= f.submit "Update Idea" %>
            <% end %>
      </div>
      <div class="five columns idea-list">
          Bright Ideas
            <%= render @ideas %>
      </div>
    </div>

  </div>
</div>
